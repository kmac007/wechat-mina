@import "../movie/movie-template.wxss";

.movie-list-container{
  margin: 20px 0;
}

.movie-head{
  display: flex;
  justify-content: space-between;
  margin-bottom: 15px;
}

.more{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 14px;
}

.more:active {
  background-color: #e6e6e6;
}

.movies-scroll{
  overflow: scroll;
  width: 100%;
  display: flex;
  height: 400rpx;
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.slogan{
  color: #494949;
  padding-left: 25rpx;
  font-size: 14px;
  line-height: 1;
  border-left: 3px solid #42bd56;
  height: 14px;
}

.more-img{
  height: 10px;
  width: 10px;
}

.more-text {
  margin-right: 5px;
  font-size: 14px;
  color: #05b512;
}