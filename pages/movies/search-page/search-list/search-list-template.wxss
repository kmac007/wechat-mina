.search-list-container {
  display: flex;
  flex-direction: row;
  padding: 20rpx 28rpx;
  border-bottom: 1rpx solid #ededed;
}

.search-list-container:active {
  background-color: #e3e3e3;
  opacity: 0.8;
}

.search-list-img {
  width: 80rpx;
  height: 112rpx;
  margin-right: 15rpx;
}

.search-item-title {
  font-size: 14px;
  color: #1f1f1f;
  font-weight: 600;
}

.search-item-info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.search-item-rating {
  color: #b3b3b3;
  font-size: 10px;
}
